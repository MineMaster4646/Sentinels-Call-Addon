{
	"format_version": "1.20.80",
	"animation_controllers": {
		"controller.animation.sword.wield": {
			"initial_state": "first_person",
			"states": {
				"first_person": {
					"animations": [
						"wield_first_person"
					],
					"transitions": [
						{
							"third_person": "!c.is_first_person"
						}
					]
				},
				"third_person": {
					"animations": [
						"wield_third_person"
					],
					"transitions": [
						{
							"first_person": "c.is_first_person"
						}
					]
				}
			}
		}
	}
}