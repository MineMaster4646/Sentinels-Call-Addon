{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.samuel_hayden": {
			"initial_state": "idle",
			"states": {
				"idle": {
					"animations": ["idle"],
					"transitions": [
						{"walking": "q.ground_speed > 0.05"}
					],
					"blend_transition": 0.2
				},
				"walking": {
					"animations": ["walking"],
					"transitions": [
						{"idle": "q.ground_speed < 0.1"}
					],
					"blend_transition": 0.2
				}
			}
		}
	}
}