{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.marauder": {
			"initial_state": "idle",
			"states": {
				"idle": {
					"animations": ["hold_axe"],
					"transitions": [
						{"walking": "q.ground_speed > 1.0"}
					],
					"blend_transition": 0.2
				},
				"walking": {
					"animations": ["hold_axe", "walking"],
					"transitions": [
						{"idle": "q.ground_speed < 0.5"}
					],
					"blend_transition": 0.2
				}
			}
		}
	}
}